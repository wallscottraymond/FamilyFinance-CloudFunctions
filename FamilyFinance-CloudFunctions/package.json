{
  "name": "family-finance-cloud-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Family Finance app with Firestore operations",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "concurrently \"npm run build:watch\" \"firebase emulators:start --only functions\""
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "plaid": "^38.1.0",
    "uuid": "^9.0.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/lodash": "^4.14.199",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "concurrently": "^8.2.2",
    "csv-parser": "^3.2.0",
    "eslint": "^8.50.0",
    "eslint-plugin-import": "^2.28.1",
    "firebase-functions-test": "^3.1.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "private": true,
  "keywords": [
    "firebase",
    "cloud-functions",
    "typescript",
    "firestore",
    "family-finance"
  ],
  "author": "Family Finance Team",
  "license": "MIT"
}
